<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DDFFEE"
    tools:context=".ui.MainActivity">

    <com.beardedhen.androidbootstrap.AwesomeTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/awesome_textview1"
        android:scaleType="fitCenter"
        app:bootstrapBrand="success"
        android:textSize="30dp"
        app:bootstrapText="ハローワールド"
        android:layout_marginBottom="100dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/request_documents_btn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <com.beardedhen.androidbootstrap.AwesomeTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/awesome_textview2"
        android:scaleType="fitCenter"
        app:bootstrapBrand="success"
        android:textSize="20dp"
        app:bootstrapText="リワークサポートセンター"
        android:layout_marginBottom="110dp"
        app:layout_constraintTop_toBottomOf="@+id/awesome_textview1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <com.beardedhen.androidbootstrap.BootstrapButton
        app:bootstrapSize="xl"
        app:roundedCorners="true"
        app:bootstrapBrand="primary"
        android:orientation="vertical"
        android:id="@+id/request_documents_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="32sp"
        android:text="資料請求"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.3"
        app:layout_constraintHorizontal_bias="0.5" />

    <com.beardedhen.androidbootstrap.BootstrapButton
        app:bootstrapSize="xl"
        app:roundedCorners="true"
        app:bootstrapBrand="info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/experience_btn"
        android:text="相談する"
        android:textSize="32dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.45"
        app:layout_constraintHorizontal_bias="0.5" />

    <com.beardedhen.androidbootstrap.BootstrapButton
        app:bootstrapSize="xl"
        app:roundedCorners="true"
        app:bootstrapBrand="warning"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/beginner_btn"
        android:textSize="20sp"
        android:text="はじめての方"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.6"
        app:layout_constraintHorizontal_bias="0.5" />


    <com.beardedhen.androidbootstrap.BootstrapButton
        app:bootstrapSize="xl"
        app:roundedCorners="true"
        app:bootstrapBrand="success"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/attendant_btn"
        android:text="通所中の方"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.75"
        app:layout_constraintHorizontal_bias="0.5" />

    <com.beardedhen.androidbootstrap.BootstrapButton
        app:bootstrapSize="xl"
        app:roundedCorners="true"
        app:bootstrapBrand="danger"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/staff_btn"
        android:textSize="20sp"
        android:text="職員の方"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.9"
        app:layout_constraintHorizontal_bias="0.5" />




</androidx.constraintlayout.widget.ConstraintLayout>